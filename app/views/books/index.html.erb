<h1>Books</h1>

<table class = "table">
  <div class = "name">
    <thead>
      <th><h4 class = "title">Title</h4></th>
      <th><h4 class = "body">Body</h4></th>
    </thead>
  </div>

  <% @books.each do |book| %>
  <tbody>
    <div class = "book-comment">
    <tr>
      <td><span class = "book-title"><%= book.title %></span></td>

      <td><span class = "book-body"><%= book.body %></span></td>
      <td><span class = "show"><%= link_to "show", book_path(book.id) %></span></td>
      <td><span class = "edit"><%= link_to "Edit", edit_book_path(book.id) %></span></td>
      <td><span class = "destroy"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span></td>
    </tr>
    </div>
  </tbody>
  <% end %>
</table>


<h2 class = "new-book">New book</h2>
<% if @book.errors.any? %>
<div id = "error_explanation">
  <div class = "errors-title">
  <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f|%>
  <div class = "new">
    <div class = "field">

      <p>Title</p>
      <%= f.text_field :title %>

    </div>

    <div class = "field">

      <p>Body</p>
      <%= f.text_area :body %>

    </div>

    <div class = "actions">
      <%= f.submit 'Create Book' %>
    </div>
  </div>
<% end %>

</body>
